<?xml version="1.0" encoding="UTF-8"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>
<configuration>
    <property>
        <name>fs.defaultFS</name>
        <value>hdfs://localhost:9000</value>
    </property>
    <property>
        <name>hadoop.tmp.dir</name>
        <value>/var/hadoop/tmp</value>
    </property>
    <property>
        <name>hadoop.security.authentication</name>
        <value>kerberos</value>
    </property>
    <property>
        <name>hadoop.security.authorization</name>
        <value>true</value>
    </property>
    <property>
        <name>hadoop.rpc.protection</name>
        <value>privacy</value>
    </property>
    <property>
        <name>hadoop.security.auth_to.local</name>
        <value>
            RULE:[2:$1@$0]([jt]t@.*EXAMPLE.COM)s/.*/mapred/
            RULE:[2:$1@$0]([nd]n@.*EXAMPLE.COM)s/.*/hdfs/
            RULE:[2:$1@$0](hm@.*EXAMPLE.COM)s/.*/hive/
            RULE:[2:$1@$0](.*@EXAMPLE.COM)s/@.*//
            DEFAULT
        </value>
    </property>
    <property>
        <name>hadoop.security.kerberos.realm</name>
        <value>EXAMPLE.COM</value>
    </property>
    <property>
        <name>hadoop.security.kerberos.krb5.conf</name>
        <value>${KRB5_CONFIG}</value>
    </property>
</configuration> 